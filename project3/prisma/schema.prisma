generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ingredients {
  id        Int      @id @default(autoincrement()) 
  Ingredient    String   @unique
 
  
  
 
}

model cooking_methods {
  id        Int      @id @default(autoincrement()) 
  methods     String   @unique

  
}
model cooking_steps {
  id        Int      @id @default(autoincrement()) 
  step     String   @unique


}

model Tag {
  id        Int      @id @default(autoincrement()) 
  tag     String   @unique
 
}

